<div class="container">
  <form action="/restaurants/{{restaurant._id}}/edit" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">餐廳名稱</label>
      <input type="text" class="form-control" id="name" name="name" value="{{restaurant.name}}" aria-describedby="">
    </div>
    <div class="mb-3">
      <label for="name_en" class="form-label">餐廳名稱（英）</label>
      <input type="text" class="form-control" id="name_en" name="name_en" value="{{restaurant.name_en}}" aria-describedby="">
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">類別</label>
      <input type="text" class="form-control" id="category" name="category" value="{{restaurant.category}}" aria-describedby="">
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">圖片連結</label>
      <input type="text" class="form-control" id="image" name="image" value="{{restaurant.image}}"  aria-describedby="">
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">地址</label>
      <input type="text" class="form-control" id="location" name="location" value="{{restaurant.location}}"  aria-describedby="">
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">電話</label>
      <input type="text" class="form-control" id="phone" name="phone" value="{{restaurant.phone}}"  aria-describedby="">
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label">google地圖連結</label>
      <input type="text" class="form-control" id="google_map" name="google_map" value="{{restaurant.google_map}}"  aria-describedby="">
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">評分</label>
      <input type="text" class="form-control" id="rating" name="rating" value="{{restaurant.rating}}"  aria-describedby="">
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">描述</label>
      <input type="text" class="form-control" id="description" name="description" value="{{restaurant.description}}" aria-describedby="">
    </div>
    <button type="submit" class="btn btn-primary">儲存</button>
  </form>
</div>